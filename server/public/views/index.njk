    <script type="text/javascript">

        

        var socket = io("http://localhost:3333", {
                autoConnect: false
        })


        function onLoginSelection(user_id) {
            
            socket.auth = {user_id}

            socket.connect();

        }

        onLoginSelection("{{user.id}}")

        socket.on("connect_error", (err) => {
            if (err.message === "invalid username") {
                console.log("error:" + err)
            }

            socket.off("connect_error")
        })

        socket.on("users", (users) => {
            console.log(users)
        })



        function renderMessage(message){
            $(".messages").append("<div class='message'> <strong> " + message.user + "</strong>: " + message.message +"</div>")
        }

    // <!--vai pegar as msgs passafas-->

        socket.on("previous_messages", (messages) => {
            for(message of messages){
                renderMessage(message)
            }
        })

   
    // <!--vai pegar a msg que foi emitida por outro user e exibir -->
   
        socket.on("emit_message", (message) => {
            renderMessage(message)
        })

        const user = "{{user.name}}"

    // <!-- jquery? -->
        $("#chat").submit(function(event){


           
            event.preventDefault()

            var message = $("input[name=message]").val()

            $("input[name=message]").val("")
        
            if(message.length){

                var messageObject = {
                    user,
                    message: message
                }
                
                //renderiza na tela de que esta enviando apenas
                renderMessage(messageObject)

                //envia pro servidor, para ser emitada para outro user
                socket.emit("send_message", messageObject)

            }


        }) 

        $(".room").click(function(event){
        
            const [, room] = event.target.className.split(" ")

            console.log(room)

            socket.emit("join_room", room)
        
        })
        

    </script>


</body>
